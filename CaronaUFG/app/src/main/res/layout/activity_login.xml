<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12478e"
    tools:context=".LoginActivity">


    <RelativeLayout
        android:id="@+id/container_form_login"
        android:layout_width="325dp"
        android:layout_height="423dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ImageLogoId"
        android:layout_marginEnd="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/background_light"
        android:paddingStart="12dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_value"
            android:layout_marginRight="@dimen/margin_value"
            android:layout_marginTop="150dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/userNameId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user_name" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="137dp"
            android:layout_marginLeft="@dimen/margin_value">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/passwordId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user_password" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/buttonLoginId"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="73dp"
            android:background="#2da4f4"
            android:text="@string/text_button_login"
            android:textColor="@android:color/background_light" />

        <ImageView
            android:id="@+id/imageLogoId"
            android:layout_width="174dp"
            android:layout_height="88dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/buttonForgotId"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:background="@android:color/background_light"
            android:text="@string/text_forgot_password"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonRegisterId"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/container_form_login"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:background="#2da4f4"
        android:text="@string/button_register"
        android:textColor="@android:color/background_light" />

</RelativeLayout>