<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_change_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12478e"
    tools:context=".menu.ChangeProfileActivity">


    <RelativeLayout
        android:id="@+id/container_form_change_profile"
        android:layout_width="337dp"
        android:layout_height="469dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@android:color/background_light">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="152dp"
            android:layout_height="107dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/profile" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="178dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/changeEmailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user_email" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textViewChangeProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="161dp"
            android:text="Alterar Perfil"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="135dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/changeCourseId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/change_course" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="90dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/currentPasswordId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user_pass_current" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="53dp">

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/buttonChangeSaveId"
            android:layout_width="133dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:background="#2da4f4"
            android:text="@string/save_change"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>